{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": ".rigidity" }
    },
    {
      "src": ".rigidity/client/**/*",
      "use": "@vercel/static"
    },
    {
      "src": ".rigidity/server/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": ".rigidity/server/index.js"
    }
  ]
}